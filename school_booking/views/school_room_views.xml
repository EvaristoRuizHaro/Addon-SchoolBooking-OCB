<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_school_room_list" model="ir.ui.view">
        <field name="name">school.room.list</field>
        <field name="model">school.room</field>
        <field name="arch" type="xml">
            <list string="Aulas / Recursos">
                <field name="name"/>
                <field name="capacity"/>
                <field name="location"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_school_room_form" model="ir.ui.view">
        <field name="name">school.room.form</field>
        <field name="model">school.room</field>
        <field name="arch" type="xml">
            <form string="Aula / Recurso">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="capacity"/>
                        <field name="location"/>
                        <field name="active"/>
                    </group>
                    <notebook>
                        <page string="Notas">
                            <field name="notes"/>
                        </page>
                        <page string="Reservas">
                            <field name="booking_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="requester_id"/>
                                    <field name="start_dt"/>
                                    <field name="end_dt"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school_room" model="ir.actions.act_window">
        <field name="name">Aulas / Recursos</field>
        <field name="res_model">school.room</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_school_room" name="Aulas" parent="menu_school_booking_root"
              action="action_school_room" sequence="10"
              groups="base.group_user,school_booking.group_school_booking_user,school_booking.group_school_booking_manager"/>
</odoo>
